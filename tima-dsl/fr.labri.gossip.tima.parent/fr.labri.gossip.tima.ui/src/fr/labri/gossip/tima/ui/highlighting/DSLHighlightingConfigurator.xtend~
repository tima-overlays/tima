package fr.labri.gossip.tima.ui.highlighting

import org.eclipse.xtext.ui.editor.syntaxcoloring.DefaultHighlightingConfiguration

class DSLHighlightingConfigurator extends DefaultHighlightingConfiguration {
    public val String TIME_TYPE_ID = "TIME_ID";
 
    def configure(IHighlightingConfigurationAcceptor acceptor) {
    	super.configure(acceptor);
        acceptor.acceptDefaultHighlighting(â€¨               DATA_TYPE_ID, "DataType", dataTypeTextStyle());
    }
 
    def dataTypeTextStyle() {
        TextStyle textStyle = defaultTextStyle().copy();
        textStyle.setStyle(SWT.ITALIC);
        return textStyle;
    }
}
